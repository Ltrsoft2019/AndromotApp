<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--This layout made for add crop recycler view-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addCrop_card"
        app:cardElevation="7dp"
        app:contentPadding="11dp"
        app:cardCornerRadius="7dp"
        >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/addCropImage"
            android:layout_gravity="start"
            android:src="@drawable/ll"
            android:scaleType="centerCrop"
            android:contentDescription="@string/addcropimage"
            android:layout_margin="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvAddCropName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/crop_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="65dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="11dp"
                />

            <TextView
                android:id="@+id/tvAddCropDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/crop_description"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="11dp"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>