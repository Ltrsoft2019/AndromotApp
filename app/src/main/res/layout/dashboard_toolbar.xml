<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/dashAppBarLayout">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dashToolbar"
        android:background="#84D9D1"
        app:title="Andromot"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            android:src="@drawable/notifications"
            android:layout_gravity="end"
            android:layout_margin="10dp"/>

    </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:queryHint="Search "
        android:iconifiedByDefault="false"
        android:layout_below="@+id/dashAppBarLayout"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cdwater"
        android:backgroundTint="#E6F4F6"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/searchView">

        <ImageView
            android:id="@+id/imleaf"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/water_drop"
            />

        <ImageView
            android:id="@+id/imnpk"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/npk"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Level\n &amp; \nNPK  Detail;"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvcrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crop Suggestion"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="70dp"
        android:layout_below="@id/cdwater"/>

    <!--<include layout="@layout/bottom_nav_layout"/>-->

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/cropSuggRecyclerView"
        android:layout_below="@id/tvcrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tvplant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plant Requisite"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="70dp"
        android:layout_below="@id/cropSuggRecyclerView"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/plantRequisiteRecyclerView"
        android:layout_below="@id/tvplant"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        />





</RelativeLayout>