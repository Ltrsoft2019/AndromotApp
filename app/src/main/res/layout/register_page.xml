<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_back_from_Register_page"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:src="@drawable/back"/>

            <ImageView
                android:id="@+id/newUserImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="150dp"
                android:src="@drawable/ll"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>


        <EditText
            android:id="@+id/firstNameReg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:ems="20"
            android:hint="First Name"
            android:inputType="text"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:background="@drawable/edit"/>

        <EditText
            android:id="@+id/middleNameReg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:ems="20"
            android:hint="Middle Name"
            android:inputType="text"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:background="@drawable/edit"/>
        <EditText
            android:id="@+id/lastNameReg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:ems="20"
            android:hint="Last Name"
            android:inputType="text"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:background="@drawable/edit"/>

        <EditText
            android:id="@+id/emailReg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:ems="30"
            android:padding="10dp"
            android:background="@drawable/edit"
            android:hint="Email"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/phoneReg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:ems="10"
            android:padding="10dp"
            android:background="@drawable/edit"
            android:hint="Phone"
            android:inputType="number"
            android:gravity="center_vertical"/>


        <EditText
            android:id="@+id/addressReg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:ems="50"
            android:hint="Address"
            android:inputType="text"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/edit"
            />

        <EditText
            android:id="@+id/countryReg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:ems="10"
            android:hint="Country"
            android:inputType="text"
            android:padding="10dp"
            android:background="@drawable/edit"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/stateReg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:ems="10"
            android:hint="State"
            android:padding="10dp"
            android:background="@drawable/edit"
            android:inputType="text"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/districtReg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/edit"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="district"
            android:inputType="text"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/cityReg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:ems="10"
            android:hint="city"
            android:inputType="text"
            android:padding="10dp"
            android:background="@drawable/edit"
            android:gravity="center_vertical"/>


        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:backgroundTint="@color/Button"/>

    </LinearLayout>

</ScrollView>
