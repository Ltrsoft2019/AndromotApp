<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Crop Detail:"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>




        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            >

            <ImageView
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:id="@+id/current_crop_image"
                android:src="@drawable/grapes2">
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grapes"
                    android:id="@+id/current_crop_name"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:layout_marginStart="150dp"
                    ></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="T H Value:"
                        android:textSize="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="150dp"
                        ></TextView>
                    <TextView
                        android:id="@+id/current_crop_TH_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="value"
                        android:textSize="25dp"
                        android:layout_marginTop="20dp"
                        >
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="145dp"
                    >

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ground Water:"
                        android:textSize="25dp"
                        android:layout_marginTop="25dp"
                        />
                    <TextView
                        android:id="@+id/current_crop_GWater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="value"
                        android:textSize="25dp"
                        android:layout_marginTop="25dp"

                        />

                </LinearLayout>



            </LinearLayout>

           <TextView
               android:id="@+id/current_crop_description"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Crop Details"
               android:layout_marginTop="190dp"
               android:layout_marginLeft="110dp"
               android:textSize="20sp"
               ></TextView>

        </androidx.cardview.widget.CardView>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N Value: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/current_crop_N_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 mg-N/kg"
                android:textSize="18sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P Value: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/current_crop_P_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5 mg/dl"
                android:textSize="18sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K Value: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/current_crop_K_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.2 mEq/L"
                android:textSize="18sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_back_from_current_crop"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Back"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:padding="12dp"
            />



    </LinearLayout>


</androidx.cardview.widget.CardView>







