<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D0EBD1"
    android:padding="16dp">

    <!-- Header Row for Back Arrow Icon and Current Crop Details Text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Back Arrow Icon -->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/download"
            android:contentDescription="Back"
            android:layout_marginEnd="8dp"/>

        <!-- Current Crop Details Text -->
        <TextView
            android:id="@+id/currentCropDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Crop Details :"
            android:textSize="20sp"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- Grape Image -->
    <ImageView
        android:id="@+id/grapeImage"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/grapes"
        android:contentDescription="Grapes"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Crop Name -->
    <TextView
        android:id="@+id/cropName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grapes"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"/>

    <!-- TH Value -->
    <TextView
        android:id="@+id/thValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T H value: 360"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Ground Water -->
    <TextView
        android:id="@+id/groundWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ground Water: 2.0 m"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Temperature -->
    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature: 75Â°F"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"/>

    <!-- NPK Values Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/npkValuesContainer"
        android:layout_width="359dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:padding="16dp"
        android:layout_marginLeft="13dp"
        app:cardBackgroundColor="#F0F6F5"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="165dp"
            android:orientation="vertical">

            <!-- N Value -->
            <TextView
                android:id="@+id/nValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="N Value: 50 mg-N/kg"
                android:textColor="#7D7D7D"
                android:textSize="20sp" />

            <!-- P Value -->
            <TextView
                android:id="@+id/pValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:text="P Value: 4.5 mg/dl"
                android:textColor="#7D7D7D"
                android:textSize="20sp" />

            <!-- K Value -->
            <TextView
                android:id="@+id/kValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:text="K Value: 4.2 mEq/L"
                android:textColor="#7D7D7D"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:backgroundTint="#009688"
        android:text="Back"
        android:textColor="#FFFFFF"/>
</LinearLayout>
