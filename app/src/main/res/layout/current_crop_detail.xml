<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D0EBD1"
    android:padding="16dp">

    <!-- Header Row for Back Arrow Icon and Current Crop Details Text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Back Arrow Icon -->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/download"
            android:contentDescription="Back"
            android:layout_marginEnd="8dp"/>

        <!-- Current Crop Details Text -->
        <TextView
            android:id="@+id/currentCropDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Crop Details :"
            android:textSize="20sp"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- Grape Image -->
    <ImageView
        android:id="@+id/current_crop_image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/grapes"
        android:contentDescription="Grapes"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Crop Name -->
    <TextView
        android:id="@+id/current_crop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grapes"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"/>

    <!-- TH Value -->
    <TextView
        android:id="@+id/current_crop_TH_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T H value: 360"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Ground Water -->
    <TextView
        android:id="@+id/current_crop_GWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ground Water: 2.0 m"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Temperature -->
    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature: 75Â°F"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"/>

    <!-- NPK Values Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/npkValuesContainer"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:padding="16dp"
        android:layout_marginLeft="13dp"
        app:cardBackgroundColor="#F0F6F5"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N Value: "

                    android:layout_marginStart="45dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/current_crop_N_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="42dp"
                    android:text="50 mg-N/kg"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P Value: "
                    android:layout_marginStart="30dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/current_crop_P_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5 mg/dl"
                    android:layout_marginStart="42dp"
                    android:textSize="18sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="K Value: "
                    android:layout_marginStart="30dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/current_crop_K_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.2 mEq/L"
                    android:layout_marginStart="42dp"
                    android:textSize="18sp"
                    />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btn_back_from_current_crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:backgroundTint="#009688"
        android:text="Back"
        android:textColor="#FFFFFF"/>
</LinearLayout>
