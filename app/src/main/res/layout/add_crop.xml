<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btnBackImgAddCrop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/back_button_image"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/addCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_crop"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@id/btnBackImgAddCrop"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addCropRecylerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/addCrop"/>

</RelativeLayout>