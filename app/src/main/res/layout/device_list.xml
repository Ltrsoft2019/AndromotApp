<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6EDEF"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btnBackImg"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_arrow_back_ios_24" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvServerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBackImg"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="Servers :"
        android:textColor="#000000"
        android:textSize="31sp"
        android:textStyle="bold" />

    <!-- Server Card -->
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/serverRecyclerView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/tvServerTitle"
       android:layout_marginTop="20dp"
       />



    <!-- Add Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddServer"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:contentDescription="TODO"
        android:src="@drawable/baseline_add_24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"/>


</RelativeLayout>
