<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6EDEF"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_arrow_back_ios_24" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvServerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Servers :"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Server Card -->
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/serverCardRecyclerView"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_marginTop="50dp"
       />



    <!-- Add Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Add Server Btn"
        android:src="@drawable/baseline_add_24"
        android:backgroundTint="#16CA1E"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="11dp"
        />

</RelativeLayout>
